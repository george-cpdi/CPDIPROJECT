<style>
  .card-container {
    margin-top: 20px;
  }

  .card-header {

    background-color: blue;
    color: white;
  }
</style>

<p id="notice"><%= notice %></p>

<div class="card-container">
  
  <div class="card">
  <div class="card-header">
    Part Orders
  </div>
  <div class="card-body">
  <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Part name</th>
              <th>Part description</th>
              <th>MFR Part #</th>
              <th>Order Quantity</th>
              <th>Delivery Date</th>
              <th>PO Number</th>
              <th>Vendor Name</th>
              <th>Vendor Phone Numbe</th>
              <th>Vendor Address</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @part_orders.each do |part| %>
              <tr>
                <td><%= part.part_name %></td>
                <td><%= part.part_description %></td>
                <td><%= part.mhr_number %></td>
                <td><%= part.quantity %></td>
                <td><%= part.delivery_date %></td>
                <td><%= part.po_number %></td>
                <td><%= part.vendor %></td>
                <td><%= part.vendor_contact %></td>
                <td><%= part.vendor_address %>
                <td><%= link_to 'Show', part %></td>
                <td><%= link_to 'Edit', edit_part_path(part) %></td>
                <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

<br>
    <%= link_to 'New Part Order', new_part_order_path, class: "btn btn-primary white", style: "float: right;" %>

  </div>
</div>

</div>
