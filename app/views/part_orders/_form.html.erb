<style>
    .card-container {
        margin-top: 20px;
    }

    .card-header {

        background-color: blue;
        color: white;
    }
</style>
<div class="card-container">

  <div class="card">
    <div class="card-header">
      Parts
    </div>
    <div class="card-body">
      <% if part_order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(part_order.errors.count, "error") %> prohibited this part_order from being saved:</h2>

          <ul>
            <% part_order.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: part_order) do |form| %>
       <h5>Vendor Information</h5>
        <div class="form-group row">

          <label for="SelectVendor" class="col-sm-2 col-form-label">Select Vendor</label>
          <div class="col-sm-4">
            <%= form.text_field :vendor_id,  class: "form-control"  %>
          </div>
        </div>
        <div class="form-group row">
          <label for="VendorName" class="col-sm-2 col-form-label">Vendor Name</label>
          <div class="col-sm-4">
            <%= form.text_field :vendor, data: {behavior: "autocomplete-order-vendors"}, class: "form-control"  %>
          </div>
        </div>
        <div class="form-group row">
          <label for="VendorPhoneNumber" class="col-sm-2 col-form-label">Vendor Phone Number</label>
          <div class="col-sm-4">
            <%= form.text_field :vendor_contact, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="VendorEmail" class="col-sm-2 col-form-label">Vendor Email</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="VendorEmail">
          </div>
        </div>
        <div class="form-group row">
          <label for="VendorAddress" class="col-sm-2 col-form-label">Vendor Address</label>
          <div class="col-sm-4">
            <%= form.text_field :vendor_address, class: "form-control" %>
          </div>
        </div>
         <br>

        <h5>Part Information</h5>

        
        <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Part Name</th>
                  <th>Part description</th>
                  <th>Quantity</th>
                  <th>Rate</th>
                  <th></th>
                </tr>
              </thead>
              <tbody class="line_items">

          <%= form.fields_for :parts do |part| %>
             
                <%= render 'part_fields', f: part %>
              
          
          <% end %>
          
           
 
          

        </tbody>

      </table>
       <div class="links">
              <%= link_to_add_association 'add part', form, :parts, data: {"association-insertion-node" => "tbody.line_items", "association-insertion-method" => "append"} %>
            </div>
          
        

        <br>

        <h5>Order Information</h5>
        <div class="form-group row">

          <label for="Order" class="col-sm-2 col-form-label">Order Quantity</label>
          <div class="col-sm-2">
            <%= form.number_field :quantity, class: "form-control", id: "quantity" %>
          </div>
          <label for="Delivery" class="col-sm-2 col-form-label">Delivery Date</label>
          <div class="col-sm-2">
            <%= form.text_field :delivery_date, class: "form-control flatpickr" %>
          </div>
          <label for="poNumber" class="col-sm-2 col-form-label">PO Number</label>
          <div class="col-sm-2">
            <%= form.text_field :po_number,  class: "form-control"  %>
          </div>
        </div>
        <div class="form-group row">

          <label for="Order" class="col-sm-2 col-form-label">Order Price</label>
          <div class="col-sm-2">
            <%= form.number_field :price, class: "form-control price", id: "price" %>
          </div>
          <label for="Delivery" class="col-sm-2 col-form-label">Total</label>
          <div class="col-sm-2">
            <%= form.number_field :total, class: "form-control", id: "total", readonly: true  %>
          </div>
          
        </div>

        <br>

       

        
           
 
          


        <br>
        <%= form.submit "Save and Close", class: "btn btn-primary" %>

        <a href="#" class="btn btn-primary" style="float: right;">Cancel</a>
        </div>
        </div>
      <% end %>

      </div>


</div>
</div>
